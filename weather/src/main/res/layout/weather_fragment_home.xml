<?xml version="1.0" encoding="utf-8"?>
<com.endymion.common.ui.widget.refresh.RefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@android:color/white" />

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never" />
        <!-- clipToPadding: 子View是否能绘制在padding区域;
             overScrollMode: 滑动到极限时，显示阴影的模式 -->

    </LinearLayout>

</com.endymion.common.ui.widget.refresh.RefreshLayout>